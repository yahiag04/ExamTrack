<%- include('../partials/header', { title: 'Modifica studente - ExamTrack' }) %>

<div class="container py-4">
  <div class="row justify-content-center mb-4">
    <div class="col-lg-8">
      <div class="card shadow-sm border-0">
        <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-md-center">
          <div>
            <h1 class="h4 fw-bold mb-1">
              Modifica studente
            </h1>
            <% if (studente) { %>
              <p class="text-muted small mb-0">
                Matricola <strong><%= studente.matricola %></strong>
                <% if (studente.nome && studente.cognome) { %>
                  · <%= studente.nome %> <%= studente.cognome %>
                <% } %>
              </p>
            <% } %>
          </div>
          <div class="mt-3 mt-md-0 text-md-end">
            <a href="/amministratore/studenti" class="btn btn-sm btn-outline-secondary">
              <i class="bi bi-arrow-left me-1"></i>
              Torna a Gestione studenti
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm border-0">
        <div class="card-body">

          <!-- Messaggi di errore successo -->
          <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger py-2 small">
              <%= error %>
            </div>
          <% } %>

          <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success py-2 small">
              <%= success %>
            </div>
          <% } %>

          <h2 class="h6 fw-bold mb-3">Dati anagrafici</h2>

          <!-- FORM MODIFICA -->
          <form method="POST" action="/amministratore/studenti/<%= studente.matricola %>/modifica">
            
            <!-- Matricola -->
            <div class="mb-3">
              <label for="matricola" class="form-label">Matricola</label>
              <input
                type="text"
                id="matricola"
                class="form-control"
                value="<%= studente.matricola %>"
                readonly
              >
              <div class="form-text">
                La matricola non è modificabile.
              </div>
            </div>

            <!-- Nome -->
            <div class="mb-3">
              <label for="nome" class="form-label">Nome</label>
              <input
                type="text"
                id="nome"
                class="form-control"
                value="<%= studente.nome%>"
                readonly
              >
            </div>

            <!-- Cognome -->
            <div class="mb-3">
              <label for="cognome" class="form-label">Cognome</label>
              <input
                type="text"
                id="cognome"
                class="form-control"
                value="<%= studente.cognome%>"
                readonly
              >
            </div>

            <!-- Corso di laurea -->
            <div class="mb-4">
              <label for="corso" class="form-label">Corso di laurea</label>
              <input
                type="text"
                id="corso"
                name="corso"
                class="form-control"
                value="<%= studente.corso || '' %>"
                placeholder="Es. Ingegneria Informatica"
              >
            </div>

            <h2 class="h6 fw-bold mb-3">Account utente</h2>

            <!-- Username -->
            <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
                type="text"
                id="username"
                name="username"
                class="form-control"
                value="<%= studente.username || '' %>"
                required
            >
            <div class="form-text">
                Lo username deve essere univoco all'interno della piattaforma.
            </div>
            </div>

            <!-- Cambia password -->
            <h2 class="h6 fw-bold mt-4 mb-3">Cambio password</h2>

            <div class="alert alert-warning small py-2">
            Lascia i campi vuoti se NON vuoi cambiare la password.
            </div>

            <!-- Nuova password -->
            <div class="mb-3">
            <label for="password" class="form-label">Nuova password</label>
            <div class="input-group">
                <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                placeholder="Inserisci nuova password"
                >
                <button 
                class="btn btn-outline-secondary togglePassword" 
                type="button"
                data-target="#password"
                >
                <i class="bi bi-eye"></i>
                </button>
            </div>
            <div class="form-text">
                Minimo 8 caratteri. Lascia vuoto se non vuoi cambiarla.
            </div>
            </div>

            <!-- Conferma nuova password -->
            <div class="mb-4">
            <label for="confirmPassword" class="form-label">Conferma nuova password</label>
            <div class="input-group">
                <input
                type="password"
                id="confirmPassword"
                name="confermaPassword"
                class="form-control"
                placeholder="Ripeti la nuova password"
                >
                <button 
                class="btn btn-outline-secondary togglePassword" 
                type="button"
                data-target="#confirmPassword"
                >
                <i class="bi bi-eye"></i>
                </button>
            </div>
            </div>

            <!-- BOTTONI  -->
            <div class="d-flex justify-content-between align-items-center mt-4">

            <!-- Bottone salva modifiche -->
            <form method="POST" action="/amministratore/studenti/<%= studente.matricola %>/modifica" class="m-0">
                <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle me-1"></i>
                Salva modifiche
                </button>
            </form>

            <!-- Bottone elimina studente -->
            <form method="POST" action="/amministratore/studenti/<%= studente.matricola %>/elimina" onsubmit="return confirm('Sei sicuro di voler eliminare questo studente?')" class="m-0">
                <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash me-1"></i>
                Elimina studente
                </button>
            </form>

            </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>