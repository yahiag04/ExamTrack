<%- include('../partials/header', { title: 'Gestione Professori - ExamTrack' }) %>

<div class="container py-4">
  <div class="row justify-content-center mb-4">
    <div class="col-lg-10">
      <div class="card shadow-sm border-0">
        <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-md-center">
          <div>
            <h1 class="h4 fw-bold mb-1">Gestione Professori</h1>
            <p class="text-muted small mb-0">
              Visualizza e gestisci i professori e i relativi insegnamenti.
            </p>
          </div>

          <a href="/amministratore" class="btn btn-sm btn-outline-secondary mt-3 mt-md-0">
            <i class="bi bi-arrow-left me-1"></i>
            Torna alla dashboard
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- TABELLA PROFESSORI -->
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow-sm border-0">
        <div class="card-body">

          <!-- filtro -->
          <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-3 gap-2">
            <div>
              <h2 class="h6 fw-bold mb-1">Elenco professori</h2>
              <p class="text-muted small mb-0">
                Totale: <strong><%= professori ? professori.length : 0 %></strong>
              </p>
            </div>

            <div class="input-group input-group-sm" style="max-width: 260px;">
              <span class="input-group-text"><i class="bi bi-search"></i></span>
              <input type="text" id="filtroProfessori" class="form-control"
                placeholder="Filtra per nome, cognome o insegnamento...">
            </div>
          </div>

          <!-- Nessun risultato -->
          <% if (!professori || professori.length === 0) { %>
            <p class="text-muted small mb-0">Nessun professore registrato.</p>
          <% } else { %>

            <!-- Tabella -->
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0" id="tabellaProfessori">
                <thead class="table-light">
                  <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Insegnamento</th>
                    <th class="text-center">Azioni</th>
                  </tr>
                </thead>

                <tbody>
                  <% professori.forEach(p => { %>
                    <tr>
                      <td class="small"><%= p.id_prof %></td>

                      <td class="small">
                        <%= p.nome %> <%= p.cognome %>
                      </td>

                      <td class="small">
                        <code><%= p.username %></code>
                      </td>

                      <td class="small"><%= p.email %></td>

                      <td class="small">
                        <%= p.nome_insegnamento ? p.nome_insegnamento : '-' %>
                      </td>

                      <td class="text-center">
                        <div class="d-flex justify-content-center gap-1">

                          <!-- MODIFICA -->
                          <a href="/amministratore/professori/<%= p.id_prof %>/modifica"
                            class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil-square me-1"></i>
                            Modifica
                          </a>

                        </div>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>

              </table>
            </div>

          <% } %>

        </div>
      </div>
    </div>
  </div>

</div>

<!-- FILTRO -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const input = document.getElementById('filtroProfessori');
    const table = document.getElementById('tabellaProfessori');

    if (!input || !table) return;

    input.addEventListener('input', () => {
      const filtro = input.value.toLowerCase();

      table.querySelectorAll('tbody tr').forEach(tr => {
        tr.classList.toggle('d-none',
          !tr.innerText.toLowerCase().includes(filtro)
        );
      });
    });
  });
</script>

<%- include('../partials/footer') %>