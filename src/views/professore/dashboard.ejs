<%- include('../partials/header', { title: 'Area Professore - ExamTrack' }) %>

<div class="container py-4">
  <div class="row justify-content-center mb-4">
    <div class="col-lg-8">
      <div class="card shadow-sm border-0">
        <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-md-center">
          
          <div>
            <h1 class="h4 fw-bold mb-1">Area Professore</h1>
            
            <% if (professore) { %>
              <p class="text-muted small mb-1">
                <strong><%= professore.nome %> <%= professore.cognome %></strong><br />
                <span class="d-block">
                  <i class="bi bi-envelope me-1"></i>
                  <%= professore.email %>
                </span>
                <% if (professore.nome_insegnamento) { %>
                  <span class="d-block mt-1">
                    <i class="bi bi-journal-text me-1"></i>
                    Insegnamento: <strong><%= professore.nome_insegnamento %></strong>
                  </span>
                <% } %>
              </p>
            <% } else { %>
              <p class="text-muted small mb-0">
                Gestisci voti ed esami relativi ai tuoi corsi.
              </p>
            <% } %>
          </div>

          <div class="mt-3 mt-md-0 text-md-end">
            <span class="badge bg-primary-subtle text-primary border border-primary-subtle px-3 py-2">
              <i class="bi bi-mortarboard-fill me-1"></i>
              Professore
            </span>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="row g-3 justify-content-center">

    <!-- Inserimento voti -->
    <div class="col-md-4">
      <div class="card h-100 shadow-sm border-0">
        <div class="card-body d-flex flex-column">
          <h2 class="h6 fw-bold mb-2">
            <i class="bi bi-pencil-square me-2 text-primary"></i>
            Inserisci voti esame
          </h2>
          <p class="text-muted small mb-3">
            Compila il form per registrare i voti degli studenti per gli appelli del tuo corso.
          </p>
          <div class="mt-auto">
            <a href="/professore/nuovo_voto" class="btn btn-sm btn-primary">
              Vai al form
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Esiti da verbalizzare -->
    <div class="col-md-4">
      <div class="card h-100 shadow-sm border-0">
        <div class="card-body d-flex flex-column">
          <h2 class="h6 fw-bold mb-2">
            <i class="bi bi-clipboard-check me-2 text-primary"></i>
            Esiti da verbalizzare
          </h2>
          <p class="text-muted small mb-3">
            Visualizza gli esami con voto accettato dagli studenti e completa la verbalizzazione.
          </p>
          <div class="mt-auto">
            <a href="/professore/verbalizzazioni" class="btn btn-sm btn-outline-primary">
              Visualizza elenco
            </a>
          </div>
        </div>
      </div>
    </div>

    <!--Statistiche corso -->
    <div class="col-md-4">
      <div class="card h-100 shadow-sm border-0">
        <div class="card-body d-flex flex-column">
          <h2 class="h6 fw-bold mb-2">
            <i class="bi bi-bar-chart-line me-2 text-primary"></i>
            Statistiche corso
          </h2>
          <p class="text-muted small mb-3">
            Media dei voti, numero di tentativi, percentuale di superamento per il tuo insegnamento.
          </p>
          <div class="mt-auto">
            <a href="/professore/statistiche_corso" class="btn btn-sm btn-outline-secondary">
              Vedi statistiche
            </a>
          </div>
        </div>
      </div>
    </div>

  </div>

</div>

<%- include('../partials/footer') %>